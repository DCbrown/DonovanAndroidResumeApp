<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="91dp"
    android:orientation="vertical"
    tools:context=".SkillsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skills"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:paddingTop="10sp"
                android:text="Professional Skills"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="• Solution Development and Delivery
• Multi-tasking and Managing Projects
• Problem Solving in a Team Environment
• Solution Development and Delivery
• Multi-tasking and Managing Projects
• Problem Solving in a Team Environment"
                android:textAlignment="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:paddingTop="10sp"
                android:text="Computer Skills"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="HTML5, CSS3, SASS, JavaScript(ES6), TypeScript, NPM, Node.js, Angular, jQuery, JSON, AJAX, PHP, LocalStorage, MySQL, Java, Bootstrap, Reveal.js, Linux, Sublime Text, Visual Studio Code, Github, FTP, Command Line Terminal, WordPress, Android Studio, Genymotion, Kotlin, Adobe Creative Suite, Pharse, Heroku, Nitrious.io, Google Docs, Adobe Marketing Suite, Webpack
"
                android:textAlignment="center"
                android:textStyle="italic" />


        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/goBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Go Back" />

</LinearLayout>